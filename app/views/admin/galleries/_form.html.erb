<%= render 'layouts/error_explanation', :object => gallery%>
<div class="row">
	<div class="form">
		<%= form_for [:admin, gallery] do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br/>
		<%= f.label :description %>
		<%= f.text_field :description %>
		<br/>
		<br/>
		<%= f.label :images %>
		<%= f.fields_for :images do |builder| %>
			<%= render "image_fields", :f => builder %>
		<% end %>
		<%= link_to_add_fields "Add Image", f, :images %>
		<br/>
		<%= f.submit submit_message %>
		<% end %>
	</div>
</div>