<h2>Manage Pages (<%= link_to 'Create New Page', new_admin_page_path %>)</h2>


<table>
	<thead>
		<tr>
			<th></th>
			<th>Page Title</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @pages.each do |page| %>
	  <tr>
	  	<td id="home_page_flag"><%= page.index? ? "Home Page" : "" %></td>
	  	<td><%= page.title %></td>
	  	<td><%= link_to 'Show', admin_page_path(page) %></td>
	  	<td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
	  	<td><%= link_to 'Delete', admin_page_path(page), confirm: 'Are you sure you want to delete this page?', method: :delete %></td>
	  </tr>
  <% end %>
	</tbody>
	</table>