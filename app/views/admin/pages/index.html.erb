<table>
	<tr>
		<th>Page Name</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @pages.each do |page| %>
	  <tr>
	  	<td><%= page.title %></td>
	  	<td><%= link_to 'Show', admin_page_path(page) %></td>
