<%= render 'layouts/error_explanation', :object => page%>
<div class="row">
	<div class="form">
		<%= form_for [:admin, page] do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %><br>
		<%= f.check_box :index %> <%= f.label :index, "Is Home Page?" %>
		<br/>
		<%= f.label :content %>
		<br/>
		<%= f.text_area :content, :id => "page_content" %>
		<br/>
		<%= f.submit submit_message %>
		<% end %>
	</div>
</div>
<script>
	$('#page_content').markItUp(mySettings);
</script>